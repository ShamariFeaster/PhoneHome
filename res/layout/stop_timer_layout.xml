<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  >
    
    <TextView android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_marginTop="15dip" 
    	android:textColor="#A4C639" 
    	android:textSize="35dip" 
    	android:textAppearance="?android:attr/textAppearanceLarge" 
    	android:text="Phone Home"  
    	android:id="@+id/logo"
    	android:layout_toRightOf="@+id/imageView1"></TextView>
        
        
 <ImageView 
    	android:src="@drawable/sad" 
    	android:id="@+id/sad" 
   	 	android:layout_height="150dip"
     	android:layout_width="200dip" 
     	android:layout_below="@+id/logo"
      	android:layout_centerHorizontal="true" 
      	android:layout_marginTop="30dip">
      	</ImageView>
        
<ImageView 
		android:layout_marginLeft="20dip"
    	android:layout_height="50dip" 
    	android:src="@drawable/phone" 
    	android:layout_width="50dip" 
    	android:id="@+id/imageView1" 
    	android:layout_alignBottom="@+id/logo"
    	>
    	</ImageView>
   
    <Button 
   		android:layout_height="60dip" 
    	android:layout_width="280dip"
    	android:layout_marginLeft="20dip"
    	android:text="@string/timer_button_string"
      	android:id="@+id/stop_timer_button"
      	android:textColor="#000000" 
    	android:textSize="35dip" 
    	android:background="#A4C639"
       	android:layout_alignParentBottom="true" 
       	android:layout_alignParentLeft="true" 
       	android:layout_marginBottom="25dip">
       </Button>
    
    <TextView 
    	android:layout_width="match_parent" 
    	android:id="@+id/message_text" 
    	android:layout_marginLeft="20dip"
    	android:layout_marginRight="20dip"
        android:layout_height="70dip" 
        android:layout_below="@+id/sad" 
        android:textColor="#A4C639"
        android:layout_alignParentLeft="true" 
        android:layout_marginTop="5dip">
        </TextView>
    
    <TextView 
        android:layout_width="match_parent"
        android:inputType="numberDecimal" 
        android:textColor="#A4C639" 
        android:layout_height="30dip" 
        android:layout_marginRight="20dip"
        android:id="@+id/number_display" 
        android:layout_above="@+id/stop_timer_button" 
        android:layout_alignLeft="@+id/stop_timer_button" 
        android:layout_marginBottom="10dip">
        </TextView>
     
    <TextView
        android:layout_width="280dip" 
        android:textColor="#A4C639" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timer_description" 
        android:layout_height="wrap_content"
        android:id="@+id/timer_description"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_above="@+id/number_display" 
        android:layout_alignParentLeft="true">
        </TextView>
    
</RelativeLayout>
